.editor-aid-list-of-inspectors__inspector-item {
    border-bottom-color: var(--unity-colors-inspector_titlebar-border);
    flex-direction: column;
}

.editor-aid-list-of-inspectors__inspector-item > .unity-inspector-element {
    padding-bottom: 7px;
}

.editor-aid-list-of-inspectors__item-header {
    flex-direction: row;
    align-items: center;
    padding-left: 4px;
    padding-right: 3px;
    border-width: 1px 0;
    border-top-color: var(--unity-colors-inspector_titlebar-border);
    border-bottom-color: var(--unity-colors-inspector_titlebar-border_accent);
    background-color: var(--unity-colors-inspector_titlebar-background);
}

.editor-aid-list-of-inspectors__item-header:hover {
    background-color: var(--unity-colors-inspector_titlebar-background-hover);
}

.editor-aid-list-control--dragging .editor-aid-list-of-inspectors__item-header:hover {
    background-color: var(--unity-colors-inspector_titlebar-background);
}

.editor-aid-list-of-inspectors__item-header--collapsed,
.editor-aid-list-of-inspectors__item-header--collapsed:hover {
    border-bottom-color: transparent;
}

.editor-aid-list-of-inspectors__inspector-item.editor-aid-list-control__item--dragged,
.editor-aid-list-of-inspectors__inspector-item.editor-aid-list-control__item--dragged .editor-aid-list-of-inspectors__item-header {
    background-color: var(--unity-colors-highlight-background);
}

.editor-aid-list-of-inspectors__item-header-foldout {
    width: 16px;
    flex: 0 0 auto;
}

.editor-aid-list-of-inspectors__item-header-foldout > .unity-foldout__toggle {
    margin: 0;
}

.editor-aid-list-of-inspectors__item-header-label {
    flex: 1 1 auto;
    padding-bottom: 1px;
    -unity-font-style: bold;
}

.editor-aid-list-of-inspectors__item-header-label:focus {
    color: var(--unity-colors-highlight-text);
}

.editor-aid-list-of-inspectors__item-header-icon,
.editor-aid-list-of-inspectors__item-header-button {
    flex: 0 0 auto;
    width: 16px;
    height: 16px;
}

.editor-aid-list-of-inspectors__item-header-enable-toggle {
    flex: 0 0 auto;
    width: 16px;
    height: 16px;
    margin: 0 3px 0 4px;
}

.editor-aid-list-of-inspectors__item-header-button {
    background-color: transparent;
    border-radius: 3px;
    border-width: 0;
    margin: 2px 2px;
}

.editor-aid-list-of-inspectors__item-header-button:hover {
    background-color: var(--unity-colors-button-background-hover);
}
